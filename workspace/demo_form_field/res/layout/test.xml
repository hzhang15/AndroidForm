            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:max="1000"/>
       
    </LinearLayout>
    	  	
