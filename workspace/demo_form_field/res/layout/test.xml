             style="?android:attr/buttonStyleSmall"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginLeft="25dp"
             android:text="@string/right" />

         <Button
             android:id="@+id/hitButton"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginLeft="25dp"
             android:text="@string/hit" />
     </LinearLayout>

     <ImageView
